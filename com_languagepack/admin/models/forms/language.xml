<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_NAME_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="lang_code"
			type="text"
			label="COM_LANGUAGEPACK_LANGUAGE_LANGUAGE_CODE_LABEL"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
            name="coordinator"
            type="text"
            label="COM_LANGUAGEPACK_LANGUAGE_COORDINATOR_LABEL"
            size="40"
            class="inputbox"
            default=""
		/>
        <field
            name="coordinator_forum_id"
            type="text"
            label="COM_LANGUAGEPACK_LANGUAGE_COORDINATOR_FORUM_ID_LABEL"
            size="6"
            class="inputbox"
            default=""
            validate="number"
            filter="integer"
        />
        <field
            name="coordinator_email"
            type="text"
            label="COM_LANGUAGEPACK_LANGUAGE_COORDINATOR_EMAIL_LABEL"
            size="40"
            class="inputbox"
            default=""
        />
		<field
            name="website"
            type="text"
            label="COM_LANGUAGEPACK_LANGUAGE_WEBSITE_LABEL"
            size="40"
            class="inputbox"
            default=""
		/>
	</fieldset>
</form>
